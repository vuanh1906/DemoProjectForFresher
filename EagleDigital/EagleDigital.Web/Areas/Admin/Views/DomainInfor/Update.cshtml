@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<link href="~/Scripts/plugin/kendoui/css/kendo.common.min.css" rel="stylesheet" />
<link href="~/Scripts/plugin/kendoui/css/kendo.default.min.css" rel="stylesheet" />
<link href="~/Scripts/plugin/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/plugin/bootstrap/js/bootstrap.js"></script>

<script src="~/Scripts/plugin/kendoui/js/jquery.min.js"></script>
<script src="~/Scripts/plugin/kendoui/js/kendo.all.min.js"></script>



<h2>Update</h2>


<div ng-controller="updateDomainInforController">
    <input type="hidden" value="@ViewBag.Id" id="hdId"/>
    <div class="form-group clearfix">
        <div class="col-md-2 control-label">
            Domain
        </div>
        <div class="col-md-3">
            <select class="form-control" ng-model="model.DomainId" ng-options="c.Id as c.Name for c in domainList"></select>
        </div>
    </div>

    <div class="form-group clearfix">
        <div class="col-md-2 control-label">
            Tab Name
        </div>
        <div class="col-md-3">
            <select class="form-control" ng-model="model.TabNameId" ng-options="c.Id as c.Name for c in tabNameList"></select>
        </div>
    </div>


    <div class="form-group clearfix">
        <div class="col-md-2 control-label">
            Content
        </div>
        <div class="col-md-8">
            <textarea id="editor" rows="10" cols="30" style="height:440px" ng-model="model.Content">
              </textarea>
            
            

        </div>
    </div>
  

    <div class="form-group clearfix">
        <input type="button" data-ng-click="SaveAdd()" value="Save" />
    </div>
    
</div>



<script>
                $(document).ready(function() {
                    $("#editor").kendoEditor({ resizable: {
                        content: true,
                        toolbar: true
                    }});
                });
</script>





