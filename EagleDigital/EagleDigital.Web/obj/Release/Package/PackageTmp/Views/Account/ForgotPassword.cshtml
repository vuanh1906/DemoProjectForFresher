@model EagleDigital.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    if (Request.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}

<div class="container">
    <div class="margin-top-3em"></div>
    <div class="row">
        <div class="col m8 offset-m2 s12">  
            <h4>@ViewBag.Title.</h4>
            <div class="row">
                <div class="col m12 s12">
                    <section id="loginForm" style="padding-bottom:15px;">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary("", new { @class = "error" })
                            <div class="input-field">
                                <div class="">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })

                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Email Link" />
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="margin-top-3em"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
